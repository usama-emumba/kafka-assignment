{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "id": 1,
      "type": "gauge",
      "title": "Connector Health",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [{ "expr": "up{job=\"kafka-connect\"}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "red" }, { "color": "green", "value": 1 }]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdMarkers": true
      }
    },
    {
      "id": 2,
      "type": "graph",
      "title": "CDC Topics - Message Count",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "kafka_topic_partition_current_offset{topic=~\"ecommerce.public.*\"}",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Messages"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Total CDC Messages",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(kafka_topic_partition_current_offset{topic=~\"ecommerce.public.*\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "thresholds": { "mode": "absolute", "steps": [{"color": "blue"}] } } },
      "options": { "reduceOptions": { "calcs": ["last"] }, "textMode": "value" }
    },
    {
      "id": 4,
      "type": "table",
      "title": "Topic Details",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "kafka_topic_partition_current_offset{topic=~\"ecommerce.public.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "partition": true, "__name__": true, "instance": true, "job": true},
            "indexByName": {},
            "renameByName": {"Value": "Messages", "topic": "Topic"}
          }
        }
      ]
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Consumer Lag",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(kafka_consumergroup_lag{topic=~\"ecommerce.public.*\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "thresholds": { "mode": "absolute", "steps": [{"color": "green"}, {"color": "yellow", "value": 100}, {"color": "red", "value": 1000}] } } },
      "options": { "reduceOptions": { "calcs": ["last"] }, "textMode": "value_and_name" }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 27,
  "style": "dark",
  "tags": ["cdc", "kafka"],
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "browser",
  "title": "CDC Pipeline Overview",
  "uid": "cdc-pipeline-v2",
  "version": 2
}
